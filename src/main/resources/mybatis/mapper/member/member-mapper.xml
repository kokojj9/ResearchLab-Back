<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.researchlab.member.model.dao.MemberMapper">

	<resultMap id="memberResultSet" type="com.example.researchlab.member.model.vo.Member">
		<result column="MEMBER_NO"     property="memberNo"/>
		<result column="MEMBER_ID"     property="memberId"/>
		<result column="MEMBER_PWD"    property="memberPwd"/>
		<result column="EMAIL"         property="email"/>
		<result colume="ENROLL_DATE"   property="enrollDate"/>
	</resultMap>

	<select id="login" parameterType="com.example.researchlab.member.model.vo.Member" resultMap="memberResultSet">
		SELECT
			   MEMBER_NO,
			   MEMBER_ID,
			   MEMBER_PWD,
			   EMAIL,
			   ENROLL_DATE
		  FROM
			   TB_MEMBER
		 WHERE
			   MEMBER_ID = #{memberId}
		   AND
			   STATUS = "Y"
	</select>







</mapper>
